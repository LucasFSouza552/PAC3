            <h2>Criar Conta</h2>
            <div class="social-icons">
                <i class="bi bi-google"></i>
                <i class="bi bi-linkedin"></i>
                <i class="bi bi-github"></i>
            </div>
            <p>ou use email para registrar</p>
        </div>


        <form id="registerForm">
            <div class="register-input name-input">
                <i class="bi bi-person-plus"></i>
                <input placeholder="Nome" type="text" id="name" name="name">
            </div>
            <div class="register-input email-input">
                <i class="bi bi-envelope-at"></i>
                <input placeholder="Email" type="email" id="email" name="email">
            </div>
            <div class="register-input password-input">
                <i class="bi bi-person-lock"></i>
                <input placeholder="Senha" type="password" id="password" name="password">
            </div>
            <div class="register-input password-input">
                <i class="bi bi-person-lock"></i>
                <input placeholder="Confirmar Senha" type="password" id="confirm-password" name="confirm-password">
            </div>
            <div class="submit">
                <input type="submit" value="Cadastrar">
            </div>
        </form>
